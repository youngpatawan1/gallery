<%provide(:title)%>
    <div class="container">
        <div class="col-md-2 profile-sidebar">
            <div class="row">
                <h2 class="username">
                <%=current_user.username %>
                </h2>
            </div>
            <div class="row">
                <%= image_tag current_user.profile_pic, class: "img-thumbnail img-fluid"%>
            </div>
            <div class="row">
                <%= current_user.about %>
            </div>
            <div class="row">
                <%= link_to "Edit Profile", edit_user_path, class: "btn btn-primary form-submit-btn" %>
            </div>
            <div class="row">
                <%= link_to "Add Painting", new_user_painting_path(current_user.id), class: "btn btn-primary form-submit-btn" %>
            </div>
        </div>
    </div>