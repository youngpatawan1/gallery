<%provide(:title)%>
  <div class="container">
      <div class="main-image row">
          <%= image_tag @painting.custom_image, class: "img-fluid" %>
      </div>
      <p class="row"><%= @painting.likes_joins.count %> <%= (@painting.likes_joins.count) == 1 ? 'Like' : 'Likes'%></p>
          <% if already_liked? %>
              <% like = LikesJoin.find_by(user_id: current_user.id, painting_id: @painting.id) %>
              <%= link_to user_painting_likes_join_path(current_user, @painting, like), method: :delete do %>
                  <%= image_tag 'unlike.svg', width: '20' %>
              <% end %>
          <% else %>
              <%= link_to user_painting_likes_joins_path(current_user, @painting), method: :post do %>
                  <%= image_tag 'like.svg', width: '20' %>
              <% end %>
          <% end %>
      <div class="row">
        <%= users_that_liked = @painting.likes_joins.map { |like| User.find_by(id: like.user_id).username } %>
        <%= react_component('Painting', {paintingId: @painting.id, comments: @painting.captions, image: url_for(@painting.custom_image), likes: users_that_liked}) %>
      </div>
  </div>
