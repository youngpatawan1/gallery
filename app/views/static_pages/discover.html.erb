<%= provide(:title, "Home") %>
<div class="container">
<h1>Discover</h1>
<div class="discover-gallery">
<% @users.each do |user| %>
    <% user.paintings.each do |painting| %>
        <div class="col-md-3 thumbnail-container">
            <%= link_to user_painting_path(user, painting) do%>
                <h2 class="thumbnail-title">
                    <%=painting.title %>
                </h2>
            <% end %>
            <%= image_tag painting.custom_image, class: "img-thumbnail img-fluid", width: "100em"%>
            <%= react_component("TransformSection") %>
        </div>
    <% end %>
<% end %>
</div>
</div>
